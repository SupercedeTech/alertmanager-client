  build-depends:       base >= 4.7 && < 5
                     , alertmanager-openapi >= 0.0.1 && < 0.0.2
                     , http-client >= 0.5 && < 0.6
                     , lens >= 4 && < 5
                     , text >= 1 && < 2
                     , transformers >= 0.5 && < 0.6
  default-language:    Haskell2010

